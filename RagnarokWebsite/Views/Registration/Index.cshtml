@model RagnarokWebsite.Models.RegistrationViewModel

@{
    ViewBag.Title = "Ragnarok > Registration";
}

<div class="row">
    <div class="col-12">
        <h1>Ragnarok XXXV Pre-Registration</h1>
        <p>Pre-registration for Ragnarok XXXV has not opened yet.  Please check back later to pre-register!</p>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="row">
    <div class="col-sm-12">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <h2>Registration Type</h2>
        <p>Please select the type of registration you wish to submit.</p>
        <p><b>You will not be permitted on site before the day you select for arrival.</b></p>
        <p><b>NOTE:</b> if you are pre-registering a minor, you will have to complete a waiver in person at Troll when you check in, in addition to the information in the following sections.</p>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h3>Adult Registrations</h3>
        @if (DateTime.Now <= new DateTime(2020, 6, 15))
        {
        @Html.RadioButtonFor(model => model.RegistrationType, "AdultSaturday1", new { id = "AdultSaturday1" })@: @Html.Label("AdultSaturday1", "Saturday (06/20/2020) - $100")<br />
        }
        @Html.RadioButtonFor(model => model.RegistrationType, "AdultSunday", new { id = "AdultSunday" }) @Html.Label("AdultSunday", "Sunday (06/21/2020) - $75")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "AdultMonday", new { id = "AdultMonday" }) @Html.Label("AdultMonday", "Monday (06/22/2020) - $75")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "AdultTuesday", new { id = "AdultTuesday" }) @Html.Label("AdultTuesday", "Tuesday (06/23/2020) - $75")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "AdultWednesday", new { id = "AdultWednesday" }) @Html.Label("AdultWednesday", "Wednesday (06/24/2020) - $75")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "AdultThursday", new { id = "AdultThursday" }) @Html.Label("AdultThursday", "Thursday (06/25/2020) - $60")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "AdultFriday", new { id = "AdultFriday" }) @Html.Label("AdultFriday", "Friday (06/26/2020) - $55")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "AdultSaturday2", new { id = "AdultSaturday2" }) @Html.Label("AdultSaturday2", "Saturday (06/27/2020) - $45")
    </div>
    <div class="col-md-4">
        <h3>Child Registrations</h3>
        @if (DateTime.Now <= new DateTime(2020, 6, 15))
        {
        @Html.RadioButtonFor(model => model.RegistrationType, "ChildSaturday1", new { id = "ChildSaturday1" })@: @Html.Label("ChildSaturday1", "Saturday (06/20/2020) - $65")<br />
        }
        @Html.RadioButtonFor(model => model.RegistrationType, "ChildSunday", new { id = "ChildSunday" }) @Html.Label("ChildSunday", "Sunday (06/21/2020) - $50")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "ChildMonday", new { id = "ChildMonday" }) @Html.Label("ChildMonday", "Monday (06/22/2020) - $50")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "ChildTuesday", new { id = "ChildTuesday" }) @Html.Label("ChildTuesday", "Tuesday (06/23/2020) - $45")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "ChildWednesday", new { id = "ChildWednesday" }) @Html.Label("ChildWednesday", "Wednesday (06/24/2020) - $45")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "ChildThursday", new { id = "ChildThursday" }) @Html.Label("ChildThursday", "Thursday (06/25/2020) - $30")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "ChildFriday", new { id = "ChildFriday" }) @Html.Label("ChildFriday", "Friday (06/26/2020) - $20")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "ChildSaturday2", new { id = "ChildSaturday2" }) @Html.Label("ChildSaturday2", "Saturday (06/27/2020) - $20")
    </div>
    <div class="col-md-4">
        @if (DateTime.Now <= new DateTime(2020, 6, 15))
        {
        @:<h3>Merchant Registrations</h3>
        @Html.RadioButtonFor(model => model.RegistrationType, "Merchant2020", new { id = "Merchant2020" })@: @Html.Label("Merchant2020", "20x20 Booth - $120")<br />
        @Html.RadioButtonFor(model => model.RegistrationType, "Merchant4020", new { id = "Merchant4020" })@: @Html.Label("Merchant4020", "40x20 Booth - $150")
        }
    </div>
</div>
<div class="row">

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Camp", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CampId, Model.CampOptions, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="col-12">

    </div>
</div>
}
